/* we are a string s and we want to find the first non-repeating character in it and return its index 
*/ 
class Solution {
public:
    int firstUniqChar(string s) {
        vector<int> freq(26,0);

        for (char c : s) { // counts how many times each char appears 
            freq[c - 'a']++; 
        } 
        for (int i = 0; i < s.size(); i ++){ // finds the first char that appears only once
            if (freq[s[i] - 'a'] == 1) {
            return i; 
            }
        }
        return -1; 
    }
};
