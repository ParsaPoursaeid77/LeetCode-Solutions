class Solution:
    def mostWordsFound(self, sentences: List[str]) -> int: 
        max_count = 0 

        for i in range(len(sentences)):
            sentence = sentences[i]
            count =  1 
            for ch in sentence:
                if ch == " ":
                    count += 1
      
            if count > max_count: 
                max_count = count

        return max_count
