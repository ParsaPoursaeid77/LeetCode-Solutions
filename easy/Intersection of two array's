#include <unordered_set>
#include <vector>
#include <iostream> 

class Solution {
public:
    vector<int> intersection(vector<int>& nums1, vector<int>& nums2) {
        unordered_set<int> set1(nums1.begin(), nums1.end()); // puts all elements of num1 into a hash set (removing duplicates automatically)
        unordered_set<int> resultSet; 

        // loop through every number in nums2 
        for(int num : nums2){
            if (set1.find(num) != set1.end()){ //check if this number exists in nums1(via set 1)
                resultSet.insert(num); // if yes, add it to the resultSet (set ensures uniqueness)
            }
        }
        // convert set -> vector 
        return vector<int>(resultSet.begin(), resultSet.end());
        
    }
};
